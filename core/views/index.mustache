

<main class="container">
  <div class="row">
    <section class="col-8">
      {{#posts}}
        <article class="entry">
          <a href="{{slug}}"><h2>{{title}}</h2></a>
          <time datetime="{{published_on}}">First published {{published_on}}.</time> {{#last_updated}}<time datetime="{{last_updated}}">Updated {{last_updated}}</time>{{/last_updated}}
          {{{content}}}
          <a class="button" href="{{slug}}">Full Article &raquo;</a>
        </article>
      {{/posts}}
    </section>
    <aside class="col-4">
      {{#author}}
        <div class="sidebar">
          <h3>About this site</h3>
          <p>{{ bio }}</p>
        </div>
      {{/author}}
      {{#has_categories}}
        <div class="sidebar">
          <h3>Categories</h3>
          <ul>
            {{#categories}}
              <li><a href="/category/{{id}}">{{name}}</a></li>
            {{/categories}}
          </ul>
        </div>
      {{/has_categories}}
    </aside>
  </div>
  <div class="row">
    <div class="col-12">
      <p>
        {{#pagination.prev_page}}
          <a class="previous-link" href="/?p={{ pagination.prev_page }}">&larr; Previous</a>
        {{/pagination.prev_page}}
        {{#pagination.next_page}}
          <a class="next-link" href="/?p={{ pagination.next_page }}">Next &rarr;</a>
        {{/pagination.next_page}}
      </p>
    </div>
  </div>
</main>
