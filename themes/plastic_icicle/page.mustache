

<main class="container">
  <div class="row">
    <section class="col-8">
      {{ #page }}
        <article class="entry">
          <h2>{{ title }}</h2>
          {{{ content }}}
        </article>
      {{ /page }}
    </section>
    <aside class="col-4">
      {{ #author }}
        <div class="sidebar">
          <h3>About this site</h3>
          <p>{{ bio }}</p>
        </div>
      {{ /author }}
      {{ #has_categories }}
        <div class="sidebar">
          <h3>Categories</h3>
          <ul>
            {{ #categories }}
              <li><a href="/category/{{ id }}">{{ name }}</a></li>
            {{ /categories }}
          </ul>
        </div>
      {{ /has_categories }}
    </aside>
  </div>
</main>
